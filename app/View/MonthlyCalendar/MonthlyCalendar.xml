<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo">
    <StackLayout class="body">
        <FlexboxLayout class="header">
            <Button class="fas" text="&#xf073;" tap="{{ switchToCurrentDate }}"/>
            <Button class="fas" text="&#xf0c9;" />
        </FlexboxLayout>
        <StackLayout class="main">
            <FlexboxLayout class="header-date-picker">
                <Button class="fas" text="&#xf060;" tap="{{ decrementMonth }}"/>
                <Button text="{{ dateSwitcherName }}" />
                <Button class="fas" text="&#xf061;" tap="{{ incrementMonth }}"/>
            </FlexboxLayout>
            <GridLayout id="calendarContent" columns="*, *, *, *, *, *, *" rows="*, 2*, 2*, 2*, 2*, 2*, 2*" />
        </StackLayout>
    </StackLayout>
</Page>

